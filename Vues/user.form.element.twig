{# 
    Template pour les éléments du formulaire
 #}
<form>
    <fieldset>
        <h1><span class="icon-{{ icon }}"></span></h1>
        <h4>{{ bname }}</h4>
        <div class="radio">
            <input type="radio" name="{{ name }}" id="html5_low" value="low">
            <label for="{{ name }}_low"></label>
        </div>
        <div class="radio">
            <input type="radio" name="{{ name }}" id="html5_med" value="med">
            <label for="{{ name }}_med"></label>
        </div>
        <div class="radio">
            <input type="radio" name="{{ name }}" id="html5_high" value="high">
            <label for="{{ name }}_high"></label>
        </div>
        <input type="checkbox" class="want-to-teach" name="wtt_{{ name }}" id="wtt_{{ name }}" value="wtt_{{ name }}" {{ wtt_checked }}>
        <input type="checkbox" class="want-to-learn" name="wtl_{{ name }}" id="wtl_{{ name }}" value="wtl_{{ name }}" {{ wtl_checked }}>
        <a class="clear-all" data-items="{{ name }}">
            <span class="icon-remove-circle"></span>
        </a>
    </fieldset>
</form>