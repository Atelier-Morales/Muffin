            });
        });
    </script>

    {% else %}
    <article data-role="grid">
        <section>
            <a href="#!"></a>
            <div data-role="form-container">
                    {% include 'home.login.twig' %}
            </div>
            <div id="form-result"></div>
        </section>
    </article>
    {% endif %}

