    {# Si l'utilisateur est connect√©, on le redirige #}
    {% if webdata.session.muffin_id %}
    <script type="text/javascript">
        $(document).ready(function()
        {
            $.ajax({
                type: "GET",
                url: "User/index" /*@TODO: MANAGE REDIRECT */
            }).done(function(e)
            {
                $('div[data-role="container"]').html(e);
